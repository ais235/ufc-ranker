# Переменные окружения для продакшена UFC Ranker

# База данных (PostgreSQL для продакшена)
DATABASE_URL=postgresql://ufcranker:your_password@localhost/ufc_ranker

# Окружение
ENVIRONMENT=production

# API настройки
API_HOST=0.0.0.0
API_PORT=8000

# CORS настройки (укажите ваш домен)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Логирование
LOG_LEVEL=INFO

# Безопасность
SECRET_KEY=your-secret-key-here-change-this-in-production

# Кэширование (если используете Redis)
REDIS_URL=redis://localhost:6379/0

# Мониторинг
SENTRY_DSN=your-sentry-dsn-here-if-using-sentry
